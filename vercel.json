{
  "functions": {
    "api/generate.js": {
      "maxDuration": 30
    },
    "api/checkout.js": {
      "maxDuration": 10
    },
    "api/user.js": {
      "maxDuration": 10
    },
    "api/webhook.js": {
      "maxDuration": 10
    },
    "api/subscribe.js": {
      "maxDuration": 10
    },
    "api/admin.js": {
      "maxDuration": 15
    }
  },
  "rewrites": [
    { "source": "/admin", "destination": "/admin.html" },
    { "source": "/linkedin-post-generator", "destination": "/post-generator.html" },
    { "source": "/linkedin-profile-optimizer", "destination": "/profile-optimizer.html" },
    { "source": "/linkedin-message-generator", "destination": "/message-generator.html" },
    { "source": "/linkedin-reply-generator", "destination": "/reply-generator.html" }
  ],
  "headers": [
    {
      "source": "/api/og",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=86400, s-maxage=86400" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" }
      ]
    }
  ]
}
